﻿@model List<Model.DTO.CategoryDTO>
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/bootstrap-select")
<br />
<div class="container-fluid">


    <div class="row">
        <div class="col-xs-12">

            <form class="form-horizontal">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <h4>Checking goods from DB and from WebShop category</h4>
                    <br />
                    <br />
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Url:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="url" placeholder="Enter Url" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="category">@Resources.Resource.Category:</label>
                    <div class="col-sm-10">
                        <select class="form-control selectpickercategory" id="category" name="CategoryId" data-live-search="true" required>
                            @foreach (var category in Model)
                            {
                                <option data-tokes="@category.Name" value="@category.Id">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Check Goods</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap-select")
<script>
    $('.selectpickercategory').selectpicker({
        style: 'btn-success',
        size: 6
    });

    function CheckGoods()
    {
        var url = $("#url").val();
        var category_id = $("#category").val();


    }

    function CheckGoodsAjax(url, category_id)
    {
        $.ajax({
            type: "POST",
            url: 'CheckGoodsAndUpdate',
            data: ({ url: url, category_id: category_id }),
            success: function (data) {
                console.log(data);
                addNode.attr("data-id", data);
            },
            error: function () {
                alert('Error occured');
            }
        });
    }
</script>
