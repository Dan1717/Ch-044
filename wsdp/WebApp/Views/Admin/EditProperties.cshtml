@model List<Model.DTO.CategoryDTO>
@{
    ViewBag.Title = "EditProperties";
}

@Styles.Render("~/Content/bootstrap.css")


<div class="container">
    <div class="row ">
        <center><h1>Configuring Properties</h1></center>
        <div class="col-sm-5">
            <div id="addproperty">
                <form action="@Url.Action("AddProperty", "Admin")" method="post">
                    <div class="form-group">
                        <h3>Add Property</h3>
                        <label for="Characteristic_Id">Characteristic Id:</label>
                        <input type="text" class="form-control" id="Characteristic_Id" name="Characteristic_Id" placeholder="Enter characteristic id">
                        <label for="Category_Id">Category Id:</label>
                        <input type="text" class="form-control" id="Category_Id" name="Category_Id" placeholder="Enter category id">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter name">
                        <label for="Description">Description:</label>
                        <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter description">
                        <label for="Type">Type:</label>
                        <input type="text" class="form-control" id="Type" name="Type" placeholder="Enter type">
                        <label for="DefaultValue">Default Value:</label>
                        <input type="text" class="form-control" id="DefaultValue" name="DefaultValue" placeholder="Enter default value of property">
                        <label for="Prefix">Perfix:</label>
                        <input type="text" class="form-control" id="Prefix" name="Prefix" placeholder="Enter prefix">
                        <label for="Sufix">Sufix:</label>
                        <input type="text" class="form-control" id="Sufix" name="Sufix" placeholder="Enter sufix">
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>

                </form>
            </div>
        </div>
        <div class="col-sm-3">
            <div id="DeleteProperty">
                <form action="@Url.Action("RemoveProperty", "Admin")" method="post">
                    <div class="form-group">
                        <h3>Remove Property</h3>
                        <input name="id" value="" id="removedidhidden"/>
                    </div>
                    <button onclick="" type="submit" class="btn btn-danger">Remove</button>
                </form>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="UpdateProperty">
                <form action="@Url.Action("UpdateProperty", "Admin")" method="post">
                    <div class="form-group">
                        <h3>Update Property</h3>
                        <label for="Property_Id">Id:</label>
                        <input type="text" class="form-control" id="Property_Id" name="Property_Id" placeholder="Enter new name">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter new name">
                        <label for="Description">Description:</label>
                        <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter new description">
                        <label for="Type">Type:</label>
                        <input type="text" class="form-control" id="Type" name="Type" placeholder="Enter new type">
                        <label for="DefaultValue">Default Value:</label>
                        <input type="text" class="form-control" id="DefaultValue" name="DefaultValue" placeholder="Enter new default value of property">
                        <label for="Prefix">Perfix:</label>
                        <input type="text" class="form-control" id="Prefix" name="Prefix" placeholder="Enter new prefix">
                        <label for="Sufix">Sufix:</label>
                        <input type="text" class="form-control" id="Sufix" name="Sufix" placeholder="Enter new sufix">
                    </div>
                    <button onclick="" type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>

    </div>
</div>