@using PagedList.Mvc;
@model PagedList.IPagedList<Model.DTO.PhoneSimpleDTO>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/Site.css")

<h2>Phones</h2>

<div class="container">

    @foreach (var phone in Model)
    {
        <div class="material-design-block">
            <div class="media">
                <div class="media-left">
                    <a class="pull-left" href="ConcretePhone/@phone.Id">
                        <img class="media-object" src="@phone.ImgUrl" alt="@phone.Name" style="">
                    </a>
                </div>

                <div class="media-body">
                    <h4 class="media-heading">@phone.Name # @phone.Id</h4>
                    Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo. Cras purus odio, vestibulum in vulputate at, tempus viverra turpis. Fusce condimentum nunc ac nisi vulputate fringilla. Donec lacinia congue felis in faucibus.
                </div>
            </div>
        </div>


    }
    <div style="width:50%; margin:0 auto;">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>

</div>


