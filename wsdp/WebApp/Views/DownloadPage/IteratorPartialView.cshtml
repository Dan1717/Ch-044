
<form action="@Url.Action("Download", "DownloadPage")" method="post">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Enter link..." id="url" name="url">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" id="submit" type="submit">@Resources.Resource.Download</button>
                    </span>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12" id="iframe">
                        <iframe src="@(ViewBag.Path)" style="width:100%; height:700px"></iframe>
                    </div>
                </div>
            </div>

            <div class="col-sm-5">

                <div class="row col-sm-12">

                    <div class="col-sm-3">
                        <label>Item iterator</label>
                    </div>

                    <div class="col-sm-7">
                        <textarea class="form-control"  rows="4" placeholder="xpath1, xpath2..."></textarea>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <br />

</form>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {
        $("#iframe").hide();
        var pathIsExist = '@ViewBag.Path';
        if (pathIsExist != "") {
            $("#iframe").show();
        }
    });
</script>
