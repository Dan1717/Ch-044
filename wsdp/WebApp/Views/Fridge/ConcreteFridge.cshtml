@model Model.Product.Fridge

@{
    ViewBag.Title = "ConcreteFridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Fridge</h4>
    <hr />

    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="material-design-block">
                <p>
                    <img src="@Model.ImagePath" alt="" class="img-responsive" />
                </p>
            </div>
        </div>
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>

    <div class="row material-design-block">
        <div class="">
            <div class="col-xs-12 table-responsive pre-scrollable">
                <h4><span class="glyphicon glyphicon-cog"></span>[Characterisctics]</h4>
                <table class="table table-striped table-hover">
                    <tbody>
                        @{
                            foreach (var nameCh in Model.CharacteristicsDictionary)
                            {
                                <tr>
                                    <td style="width:50%;">
                                        <b>
                                            @nameCh.Key
                                        </b>
                                    </td>
                                    <td>
                                        @nameCh.Value
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
