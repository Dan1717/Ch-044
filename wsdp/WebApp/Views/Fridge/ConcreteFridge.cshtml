@model Model.Product.Fridge

@{
    ViewBag.Title = "ConcreteFridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/FridgeStylesheet")

<div class="container item" style="background:#fff; border:1px solid #c0c0c0; padding:25px 15px; position:relative;  transition: all .5s; margin-bottom:10px; overflow: hidden;">

    <div class="row">

        <div class="col-sm-12 col-sm-1">

            <div class="material-design-block col-sm-4">
                <p>
                    <img src="@Model.ImageLink" alt="" class="img-responsive" style="height:250px;" />
                </p>
            </div>

            <div class="col-sm-6">

                <div class="item_name">

                    <h3>@Model.Name</h3>
                </div>
            </div>

            <div class="col-sm-8">
                <div class="item_desc">
                    Product description... Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                </div>
            </div>

            <div class="col-sm-8 item_price" style="font-size:18px; font-weight:700;">
                @Model.Price грн
            </div>
        </div>
    </div>
    <div class="row">
        <div class="">
            <div class="table-responsive pre-scrollable">
                <h4><span class="glyphicon glyphicon-cog"></span>[@Resources.Resource.Characteristics]</h4>
                <table class="table table-striped table-hover">
                    <tbody>
                        @{
                            foreach (var nameCh in Model.CharacteristicsDictionary)
                            {
                                <tr>
                                    <td style="width:50%;">
                                        <b>
                                            @nameCh.Key
                                        </b>
                                    </td>
                                    <td>
                                        @nameCh.Value
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<p>
    @Html.ActionLink("Back to List", "Index")
</p>