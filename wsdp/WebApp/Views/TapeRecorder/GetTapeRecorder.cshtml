@model Model.Product.TapeRecorder
@{
	ViewBag.Title = "ConcreteTV";
}

@Styles.Render("~/Content/styles")

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="" style="color: #555; text-align: center; padding-bottom: 25px; border-bottom: 1px dashed #CCC;">
				<h2>@Model.Name</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-6">
			<div class="material-design-block">
				<p>
					<img src="@Model.ImgPath" alt="" class="img-responsive" />
				</p>
			</div>

		</div>
	</div>

	<div class="row material-design-block">
		<div class="">
			<div>
				<h4><span class="glyphicon glyphicon-cog"></span>@Resources.Resource.Characteristics</h4>
				<table class="table table-striped table-hover">
					<tbody>
						@{
							foreach (var nameCh in Model.Characteristics) {
								<tr>
									<td style="width: 50%;">
										<b>
											@nameCh.Key
										</b>
									</td>
									<td>
										@nameCh.Value
									</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
